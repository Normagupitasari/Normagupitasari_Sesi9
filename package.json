{
    "name": "selenium-mocha-digital-skola",
    "version": "1.0.0",
    "description": "Selenium WebDriver tests using Mocha with Mochawesome reports",
    "scripts": {
        "test": "mocha tests --recursive --timeout 60000",
        "test-parallel": "mocha tests --parallel --recursive --timeout 60000",
        "test-html": "mocha tests --recursive --timeout 60000 --reporter mocha-simple-html-reporter --reporter-options output=report.html",
        "test-mochawesome": "mocha tests --recursive --timeout 60000 --reporter mochawesome",
        "test-mochawesome-html": "mocha tests --recursive --timeout 60000 --reporter mochawesome --reporter-options reportDir=reports,reportFilename=report.html"
           },
    "dependencies": {
        "selenium-webdriver": "^4.17.0"
    },
    "devDependencies": {
        "mocha": "^10.4.0",
        "mocha-simple-html-reporter": "^2.0.0",
        "mochawesome": "^7.1.3"
    }
}
